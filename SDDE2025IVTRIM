        // --- UTILS ---
        const fMoney = (n) => new Intl.NumberFormat('es-CO', {style:'currency', currency:'COP', maximumFractionDigits:0}).format(n);
        const fNum = (n) => new Intl.NumberFormat('es-CO').format(n);

        // --- INIT ---
        document.addEventListener('DOMContentLoaded', () => {
            lucide.createIcons();
            initDashboard();
            setupSearch();
        });

        // --- CORE LOGIC ---
        function initDashboard() {
            // Aggregates
            let total = {c:0, o:0, p:0};
            let totalMetas = 0;
            let metasCumplidas = 0;

            RAW_DATA.forEach(p => {
                total.c += p.pre.c;
                total.o += p.pre.o;
                total.p += p.pre.p;
                
                // Calcular metas cumplidas (considerando 100% como logrado)
                p.kpi.forEach(k => {
                    totalMetas++;
                    if((k.a_total / k.m_total) >= 1) metasCumplidas++;
                });
            });

            // 1. Render Summary KPIs
            document.getElementById('kpi-total-comp').innerText = fMoney(total.c).replace(',00', '');
            document.getElementById('kpi-total-obl').innerText = fMoney(total.o).replace(',00', '');
            document.getElementById('kpi-pct-obl').innerText = ((total.o/total.c)*100).toFixed(1) + "%";
            document.getElementById('kpi-total-pag').innerText = fMoney(total.p).replace(',00', '');
            document.getElementById('kpi-pct-pag').innerText = ((total.p/total.o)*100).toFixed(1) + "%";

            // KPI Metas Alcanzadas
            document.getElementById('kpi-goals-achieved').innerText = metasCumplidas;
            const pctMetas = (metasCumplidas / totalMetas) * 100;
            document.getElementById('kpi-goals-bar').style.width = pctMetas + "%";

            // 2. Render Main Chart (Barras PRO)
            const ctx = document.getElementById('mainChart').getContext('2d');
            
            // Gradientes Chart.js
            const gradBlue = ctx.createLinearGradient(0, 0, 0, 400); 
            gradBlue.addColorStop(0, '#142334'); 
            gradBlue.addColorStop(1, '#335275');

            const gradGreen = ctx.createLinearGradient(0, 0, 0, 400); 
            gradGreen.addColorStop(0, '#279B48'); 
            gradGreen.addColorStop(1, '#6ee7b7');

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: RAW_DATA.map(d => d.area.replace('Oficina de ', '')), 
                    datasets: [
                        { 
                            label: 'Compromisos', 
                            data: RAW_DATA.map(d => d.pre.c), 
                            backgroundColor: gradBlue, 
                            borderRadius: 8, 
                            barThickness: 24,
                            hoverBackgroundColor: '#1e3a5f'
                        },
                        { 
                            label: 'Obligaciones', 
                            data: RAW_DATA.map(d => d.pre.o), 
                            backgroundColor: gradGreen, 
                            borderRadius: 8, 
                            barThickness: 24,
                            hoverBackgroundColor: '#22c55e'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { position: 'top', align: 'end', labels: { usePointStyle: true, boxWidth: 8, font: {family:'Inter', size: 11} } },
                        tooltip: {
                            backgroundColor: 'rgba(255, 255, 255, 0.95)',
                            titleColor: '#142334',
                            bodyColor: '#64748B',
                            borderColor: '#E2E8F0',
                            borderWidth: 1,
                            padding: 12,
                            boxPadding: 4,
                            cornerRadius: 12,
                            titleFont: {family:'Inter', size: 13, weight: 'bold'},
                            bodyFont: {family:'Inter', size: 12},
                            callbacks: { label: (c) => ' ' + c.dataset.label + ': ' + fMoney(c.raw).replace(',00','') }
                        }
                    },
                    scales: {
                        y: { 
                            beginAtZero: true, 
                            grid: { color: '#F1F5F9', drawBorder: false }, 
                            ticks: { callback: v => '$' + v/1000000000 + 'MM', font: {family:'Inter', size:8}, color: '#94A3B8', padding: 5 } 
                        },
                        x: { 
                            grid: { display: false }, 
                            ticks: { font: {family:'Inter', size: 11, weight:'600'}, color: '#475569' } 
                        }
                    },
                    interaction: { mode: 'index', intersect: false }
                }
            });

            // 3. Render Contracts List (Estilo Lista)
            const contractList = document.getElementById('contracts-list');
            RAW_DATA.forEach(p => {
                const pct = ((p.contracts / 104) * 100).toFixed(1);
                contractList.innerHTML += `
                    <div class="flex items-center gap-4 p-3 hover:bg-white rounded-xl transition-all border border-transparent hover:border-slate-100 group">
                        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-slate-100 to-white border border-slate-200 flex items-center justify-center text-[#142334] font-bold text-sm shrink-0 shadow-sm">
                            ${p.contracts}
                        </div>
                        <div class="flex-grow min-w-0">
                            <div class="flex justify-between items-center mb-1.5">
                                <h5 class="text-xs font-bold text-[#142334] truncate group-hover:text-[#279B48] transition-colors">${p.area}</h5>
                                <span class="text-[10px] font-bold text-slate-400 bg-slate-50 px-2 py-0.5 rounded-full">${pct}%</span>
                            </div>
                            <div class="w-full bg-slate-100 h-2 rounded-full overflow-hidden">
                                <div class="bg-[#142334] h-full rounded-full group-hover:bg-[#279B48] transition-colors" style="width: ${pct}%"></div>
                            </div>
                        </div>
                    </div>
                `;
            });

            // 4. Render Project Sidebar
            renderProjectList(RAW_DATA);
            loadProjectDetail(1);

            // 5. Render Financial Table
            const fbody = document.getElementById('finance-table-body');
            RAW_DATA.forEach(p => {
                fbody.innerHTML += `
                    <tr class="hover:bg-slate-50 border-b border-slate-50 last:border-0 transition-colors group">
                        <td class="px-6 py-4">
                            <p class="text-xs font-bold text-[#142334] group-hover:text-[#279B48] transition-colors">${p.area}</p>
                            <p class="text-[10px] text-slate-400 truncate max-w-[200px]">${p.nom}</p>
                        </td>
                        <td class="px-4 py-4 text-center">
                            <span class="inline-block w-8 h-8 leading-8 bg-white border border-slate-200 text-slate-600 rounded-full text-xs font-bold shadow-sm">${p.contracts}</span>
                        </td>
                        <td class="px-6 py-4 text-right text-slate-600 text-xs font-medium font-mono">${fMoney(p.pre.c).replace(',00','')}</td>
                        <td class="px-6 py-4 text-right text-[#279B48] font-bold text-xs font-mono">${fMoney(p.pre.o).replace(',00','')}</td>
                        <td class="px-6 py-4 text-right text-slate-400 text-xs font-mono">${fMoney(p.pre.p).replace(',00','')}</td>
                    </tr>
                `;
            });

            // Footer Totals
            document.getElementById('ft-comp').innerText = fMoney(total.c).replace(',00','');
            document.getElementById('ft-obl').innerText = fMoney(total.o).replace(',00','');
            document.getElementById('ft-pag').innerText = fMoney(total.p).replace(',00','');

            // Financial Pie Chart (Estilo Minimal)
            const ctxPie = document.getElementById('financePieChart').getContext('2d');
            new Chart(ctxPie, {
                type: 'doughnut',
                data: {
                    labels: ['Pendiente', 'Ejecutado', 'Pagado'],
                    datasets: [{
                        data: [total.c - total.o, total.o - total.p, total.p],
                        backgroundColor: ['rgba(255,255,255,0.05)', '#279B48', '#FFEA00'],
                        borderColor: 'transparent',
                        hoverOffset: 10
                    }]
                },
                options: { 
                    cutout: '85%', 
                    plugins: { legend: { display: false } } 
                }
            });
            document.getElementById('fin-eff-center').innerText = ((total.o/total.c)*100).toFixed(0) + "%";
            document.getElementById('fin-pag-kpi').innerText = ((total.p/total.o)*100).toFixed(0) + "%";
            document.getElementById('fin-pen-kpi').innerText = fMoney(total.c - total.o).substring(0,6) + "..";
        }

        // --- HELPERS ---
        function renderProjectList(data) {
            const container = document.getElementById('project-list');
            container.innerHTML = '';
            data.forEach(p => {
                const el = document.createElement('div');
                el.className = "p-4 rounded-xl bg-white border border-slate-100 hover:border-[#279B48] hover:shadow-md cursor-pointer transition-all group mb-3 relative overflow-hidden";
                el.onclick = () => loadProjectDetail(p.id);
                el.innerHTML = `
                    <div class="absolute left-0 top-0 bottom-0 w-1 bg-[#279B48] opacity-0 group-hover:opacity-100 transition-opacity"></div>
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-[10px] font-bold text-[#142334] uppercase tracking-wide bg-slate-100 px-2 py-0.5 rounded-full">${p.area}</span>
                        <span class="text-[10px] text-slate-400 font-medium">${p.contracts} ctr.</span>
                    </div>
                    <h4 class="text-xs font-semibold text-slate-600 leading-snug group-hover:text-[#142334] line-clamp-2">${p.nom}</h4>
                `;
                container.appendChild(el);
            });
        }

        function loadProjectDetail(id) {
            const p = RAW_DATA.find(x => x.id === id);
            
            document.getElementById('detail-title').innerText = p.nom;
            document.getElementById('detail-office').innerText = p.area; 
            document.getElementById('detail-bpin').innerText = "BPIN: " + p.bpin;
            document.getElementById('detail-contract-badge').innerText = p.contracts + " Contratos y/o Adiciones suscritos";
            
            document.getElementById('detail-comp').innerText = fMoney(p.pre.c).replace(',00','');
            document.getElementById('detail-obl').innerText = fMoney(p.pre.o).replace(',00','');
            document.getElementById('detail-pag').innerText = fMoney(p.pre.p).replace(',00','');
            document.getElementById('detail-eff-big').innerText = ((p.pre.o/p.pre.c)*100).toFixed(1) + "%";

            const indContainer = document.getElementById('detail-indicators');
            indContainer.innerHTML = '';
            p.kpi.forEach(k => {
                const pct2025 = Math.min((k.a_2025 / k.m_2025) * 100, 100);
                const pctTotal = Math.min((k.a_total / k.m_total) * 100, 100);
                
                indContainer.innerHTML += `
                <div class="card-pro p-5 border-none shadow-sm hover:shadow-md bg-white">
                    <p class="text-xs font-bold text-[#142334] mb-3 leading-snug">${k.n}</p>
                    
                    <!-- Fila 2025 -->
                    <div class="mb-4">
                        <div class="flex justify-between text-[10px] mb-1">
                            <span class="font-bold text-slate-500 uppercase">Vigencia 2025</span>
                            <span class="font-bold text-[#279B48]">${pct2025.toFixed(0)}%</span>
                        </div>
                        <div class="w-full bg-slate-100 h-1.5 rounded-full overflow-hidden mb-1">
                            <div class="h-full rounded-full bg-[#279B48]" style="width: ${pct2025}%"></div>
                        </div>
                        <div class="flex justify-between text-[10px] text-slate-400">
                            <span>Avance: ${fNum(k.a_2025)}</span>
                            <span>Meta: ${fNum(k.m_2025)}</span>
                        </div>
                    </div>

                    <!-- Fila Acumulado -->
                    <div>
                         <div class="flex justify-between text-[10px] mb-1">
                            <span class="font-bold text-slate-500 uppercase">Acumulado Cuatrienio</span>
                            <span class="font-bold text-[#142334]">${pctTotal.toFixed(0)}%</span>
                        </div>
                        <div class="w-full bg-slate-100 h-1.5 rounded-full overflow-hidden mb-1">
                            <div class="h-full rounded-full bg-[#142334]" style="width: ${pctTotal}%"></div>
                        </div>
                         <div class="flex justify-between text-[10px] text-slate-400">
                            <span>Avance: ${fNum(k.a_total)}</span>
                            <span>Meta: ${fNum(k.m_total)}</span>
                        </div>
                    </div>
                </div>`;
            });
        }

        function openGoalsModal() {
            const achievedList = document.getElementById('list-achieved');
            const pendingList = document.getElementById('list-pending');
            let countAchieved = 0;
            let countPending = 0;

            achievedList.innerHTML = '';
            pendingList.innerHTML = '';

            RAW_DATA.forEach(p => {
                p.kpi.forEach(k => {
                    // Criterio: Se considera lograda si el acumulado >= 100%
                    const pct = (k.a_total / k.m_total) * 100;
                    const isAchieved = pct >= 100;
                    
                    const itemHtml = `
                        <div class="p-3 rounded-xl border transition-all hover:shadow-sm ${isAchieved ? 'bg-green-50/50 border-green-100' : 'bg-white border-slate-100'}">
                            <div class="flex justify-between items-start gap-2 mb-2">
                                <p class="text-xs font-bold text-[#142334] leading-snug">${k.n}</p>
                                <span class="text-[10px] px-2 py-0.5 rounded-full font-bold whitespace-nowrap ${isAchieved ? 'bg-green-100 text-green-700' : 'bg-slate-100 text-slate-500'}">
                                    ${pct.toFixed(0)}%
                                </span>
                            </div>
                            <p class="text-[10px] text-slate-400 font-medium mb-2 flex items-center gap-1">
                                <i data-lucide="building-2" class="w-3 h-3"></i> ${p.area}
                            </p>
                            <div class="w-full bg-slate-100 h-1.5 rounded-full overflow-hidden">
                                <div class="h-full rounded-full ${isAchieved ? 'bg-green-500' : 'bg-slate-400'}" style="width: ${Math.min(pct, 100)}%"></div>
                            </div>
                        </div>
                    `;

                    if (isAchieved) {
                        achievedList.innerHTML += itemHtml;
                        countAchieved++;
                    } else {
                        pendingList.innerHTML += itemHtml;
                        countPending++;
                    }
                });
            });

            document.getElementById('count-achieved').innerText = countAchieved;
            document.getElementById('count-pending').innerText = countPending;
            
            const modal = document.getElementById('goals-modal');
            modal.classList.remove('hidden');
            // Re-init icons inside modal
            lucide.createIcons();
        }

        function closeGoalsModal() {
            document.getElementById('goals-modal').classList.add('hidden');
        }

        function switchView(id) {
            ['resumen', 'proyectos', 'financiero', 'glosario'].forEach(v => {
                const el = document.getElementById('view-'+v);
                const btn = document.getElementById('btn-'+v);
                
                if (el) el.classList.add('hidden');
                if (btn) btn.classList.remove('active');
            });
            document.getElementById('view-'+id).classList.remove('hidden');
            document.getElementById('btn-'+id).classList.add('active');
        }

        function setupSearch() {
            document.getElementById('project-search').addEventListener('keyup', (e) => {
                const term = e.target.value.toLowerCase();
                renderProjectList(RAW_DATA.filter(p => p.nom.toLowerCase().includes(term)));
            });
        }

        function exportToPDF() {
            const el = document.getElementById('dashboard-content');
            html2pdf().set({ margin: 5, filename: 'SDDE_Reporte_2025.pdf', image: { type: 'jpeg', quality: 0.98 }, html2canvas: { scale: 2 }, jsPDF: { unit: 'mm', format: 'a4', orientation: 'landscape' } }).from(el).save();
        }
    </script>
</body>
</html>
